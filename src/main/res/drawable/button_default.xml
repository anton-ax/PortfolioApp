<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="@dimen/button_corner" />
    <gradient
        android:angle="@integer/button_gradient_angle"
        android:centerColor="@color/button_first_color"
        android:centerX="0%"
        android:endColor="@color/button_second_color"
        android:startColor="@color/button_third_color"
        android:type="linear" />
    <stroke
        android:width="@dimen/button_stroke_width"
        android:color="@color/button_stroke_color" />
</shape>